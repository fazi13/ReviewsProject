<div id="home-search-container">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="widget pull-right">
          <div class="row">
            <div class="span12 head-container">
              <div class="row">
                <div class="span8 hidden-phone">
                  <h2 class="head-title">Welcome to Renter Reviews</h2>
                  <p class="head-message"><strong>Renter Reviews - Check your renters beyond their credit score.</strong><br />
                  Real reviews from real landlords about their experience with the renter.</p>
                  <%= link_to "Add a New Renter", new_renter_path, class: "btn btn-large btn-realto span3 header-cta"%>
                </div>
                <div class="span4" style="padding-bottom: 150px;">
                  <div class="search-form">
                    <p>Find your next renter</p>
                    <%= form_tag search_renters_path, method: :get do |f| %>
                      <%= text_field_tag :license, nil, placeholder: "Driver's License" %>
                      <%#= text_field_tag :id, nil, placeholder: "ID number" %>
                      <%# <%= text_field_tag :search, nil, placeholder: "John Doe" %>
                      <%# <%= text_field_tag :location, nil, placeholder: "Los Angeles, CA" %> 
                      <%= submit_tag 'Search', name: nil, class: "btn span2 btn-realto-form btn-large" %>
                    <% end %>
                  </div>
                  <!-- .search-form -->   
                </div>
                <!-- .span4 -->
              </div>
            </div>        
          </div>
          <!-- .row -->
        </div>
        <!-- .search-holder -->
      </div>
      <!-- .span12 -->
    </div>
    <!-- .row -->
  </div>
  <!-- .container -->
</div>
<div id="latest-properties">
  <div class="container">
    <div class="row">
      <div class="span12">
        <h2 class="secion-title">Recent Reviews</h2>
      </div>
    </di        
    <!-- Begin Carousel -->
    <div class="row">
      <div id="realto-carousel" class="carousel slide span12">
        <div class="carousel-navigation pull-right">
          <a class="left carousel-control pull-left" href="#realto-carousel" data-slide="prev">‹</a>
          <a class="right carousel-control pull-right" href="#realto-carousel" data-slide="next">›</a>
        </div>
        <div class="carousel-inner">
          <div class="item active">
            <ul class="thumbnails">
              <% @renters.last(3).each do |r| %>
                <li class="span4 box-container">
                  <div class="holder">
                    <a class="overlay" title="property title" href="#">
                      <span class="more"></span>
                      <%= link_to image_tag("http://placehold.it/370x210"), r %>
                    <span class="prop-tag">Nearby</span>
                    <div class="prop-info">
                      <h3 class="prop-title"><%= link_to (r.fname.titleize + " " + r.lname.titleize), r %></h3>
                      <ul class="more-info clearfix">
                        <li class="info-label clearfix">
                          <span class="pull-left">Rating:</span> 
                          <% if r.review.present? %>
                            <span class="prop-price pull-right serif italic star-rating" data-score=<%= r.review.average(:rating).round(2) %>></span>
                          <% else %>
                            <span class="prop-price pull-right serif italic star-rating" data-score=0></span>
                          <% end %>                                                  
                        <li class="info-label clearfix"><span class="pull-left">Location:</span> <span class="qty pull-right"><%= r.city.titleize %>, <%= r.state.upcase %></span></li>
                      </ul>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div><!-- .item -->
          <div class="item">
            <ul class="thumbnails">
              <% if @renters.size > 3 %>
                <% @renters.order(:id).reverse_order.limit(3).offset(3).each do |r| %>
                  <li class="span4 box-container">
                  <div class="holder">
                      <a class="overlay" title="property title" href="#">
                      <span class="more"></span>
                        <%= link_to image_tag("http://placehold.it/370x210"), r %>
                      <span class="prop-tag">Nearby</span>
                      <div class="prop-info">
                        <h3 class="prop-title"><%= link_to (r.fname.titleize + " " + r.lname.titleize), r %> <%= link_to r.lname, r %></h3>
                        <ul class="more-info clearfix">
                          <li class="info-label clearfix"><span class="pull-left">Rating:</span> 
                          <% if r.review.present? %>
                            <span class="prop-price pull-right serif italic star-rating" data-score=<%= r.review.average(:rating).round(2) %>></span>
                          <% else %>
                            <span class="prop-price pull-right serif italic star-rating" data-score=0></span>
                          <% end %>
                          <li class="info-label clearfix"><span class="pull-left">Location:</span> <span class="qty pull-right"><%= r.city.titleize %>, <%= r.state.upcase %></span></li>
                        </ul>
                      </div>
                    </div>
                  </li>
                <% end %>
              <% else %>
                <li class="info-label clearfix">
                  <h5 class="prop-title">No other renters nearby.</h5>
                </li>
              <% end %>
            </ul>
          </div><!-- .item -->                 
        </div><!-- .carousel-inner -->
      </div>
    </div><!--End Carousel-->        
  </div><!--container  -->
</div><!-- #latest-properties  -->     
